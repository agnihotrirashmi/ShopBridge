@model ShopBridge.Models.Product

@{
    ViewData["Title"] = "Add";
}

<h4>Add Product Details</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="box-body">
            @using (Html.BeginForm("Add", "Products", FormMethod.Post, new { @id = "AddProduct", @class = "form-horizontal", @enctype = "multipart/form-data", @onsubmit = "return SubmitJForm(this);" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <div class="col-xs-4">
                        @Html.LabelFor(model => model.ProductName, new { @class = "control-label " })
                    </div>
                    <div class="col-xs-8">
                        @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control", @placeholder = "Product Name" })
                        <p>
                            @Html.ValidationMessageFor(m => m.ProductName, null, new { @class = "text-danger" })
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-4">
                        @Html.LabelFor(model => model.ProductDescription, new { @class = "control-label" })
                    </div>
                    <div class="col-xs-8">
                        @Html.TextAreaFor(model => model.ProductDescription, new { @class = "form-control", @placeholder = "Product Owner Email" })
                        <p>(Note: Please use Email Address)</p>
                        <p>
                            @Html.ValidationMessageFor(m => m.ProductDescription, null, new { @class = "text-danger" })
                        </p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-4">
                        @Html.LabelFor(model => model.ProductPrice, new { @class = "control-label" })
                    </div>
                    <div class="col-xs-8">
                        @Html.TextBoxFor(model => model.ProductPrice, new { @class = "form-control", @placeholder = "Product Price", @type = "number", @min = "0" })
                        <p>
                            @Html.ValidationMessageFor(m => m.ProductPrice, null, new { @class = "text-danger" })
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-4">
                        @Html.LabelFor(model => model.ProductPrice, new { @class = "control-label" })
                    </div>
                    <div class="col-xs-8">
                        <input type="file" name="file" id="file"/>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @Html.ActionLink("Cancel", "List", "Products", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
            $('input[data-val-required]').each(function () {
                AddAsterick($(this));
            });
        })
    </script>
}

