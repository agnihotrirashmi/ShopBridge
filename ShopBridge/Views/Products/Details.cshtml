@model ShopBridge.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h4>Details</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="box-body">
            <div class="form-group">
                <div class="col-xs-4">
                    @Html.LabelFor(model => model.ProductName, new { @class = "control-label " })
                </div>
                <div class="col-xs-8">
                    @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" , @readonly = true})
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-4">
                    @Html.LabelFor(model => model.ProductDescription, new { @class = "control-label" })
                </div>
                <div class="col-xs-8">
                    @Html.TextAreaFor(model => model.ProductDescription, new { @class = "form-control", @readonly = true })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-4">
                    @Html.LabelFor(model => model.ProductPrice, new { @class = "control-label" })
                </div>
                <div class="col-xs-8">
                    @Html.TextBoxFor(model => model.ProductPrice, new { @class = "form-control" , @readonly = true })
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ProductImage))
            {
                <div class="form-group">
                    <div class="col-xs-4">
                        @Html.LabelFor(model => model.ProductImage, new { @class = "control-label" })
                    </div>
                    <div class="col-xs-8">
                        <img src="~/@Model.ProductImage" alt="Product Image" height="200px" width="200px" />
                    </div>
                </div>
            }

            <div class="form-group">
                @Html.ActionLink("Cancel", "List", "Products", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>

</div>
